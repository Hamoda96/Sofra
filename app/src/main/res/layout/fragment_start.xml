<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/start_fragment_im_food_logo_1"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_minus50sdp"
        android:layout_marginTop="@dimen/_minus30sdp"
        android:scaleType="fitStart"
        android:src="@drawable/image_food_1" />

    <ImageView
        android:id="@+id/start_fragment_im_food_logo_2"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_minus60sdp"
        android:layout_marginBottom="@dimen/_minus60sdp"
        android:scaleType="fitEnd"
        android:src="@drawable/image_food_2" />


    <Button
        android:id="@+id/start_fragment_btn_food_order"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/food_order"
        android:textSize="@dimen/_15ssp" />

    <Button
        android:id="@+id/start_fragment_btn_buy_food"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@id/start_fragment_btn_food_order"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/buy_food"
        android:textSize="@dimen/_15ssp" />

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_above="@id/start_fragment_btn_food_order"
        android:layout_centerInParent="true"
        android:contentDescription="@string/logo"
        android:src="@drawable/sofra_logo" />
</RelativeLayout>