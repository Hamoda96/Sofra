<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_shape">

        <ImageView
            android:id="@+id/food_list_item_iv_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_65sdp"
            android:layout_marginBottom="@dimen/_minus4sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_65sdp"
            android:layout_below="@+id/food_list_item_iv_image"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingRight="@dimen/_10sdp">

            <TextView
                android:id="@+id/food_list_item_tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تشيكن فريز"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_20ssp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/food_list_item_tv_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تشيكن فريز"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/food_list_item_tv_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="السعر : 50 درهم"
                android:textColor="#3B2C47"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>